<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TableLayout
            android:id="@+id/fragment_take_photos.tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="10dp">

            <TextView
                    android:id="@+id/fragment_take_photos.header_label"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/fragment_take_photos.header_label"
                    android:textSize="15sp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="10dp">

            <TextView
                    android:id="@+id/fragment_take_photos.commission_label"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="@string/fvoting.commision.label"
                    android:textSize="15sp"/>

            <TextView
                    android:id="@+id/fragment_take_photos.commission_number"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@color/green"
                    android:text="5"
                    android:textSize="15sp"/>
        </TableRow>
    </TableLayout>

    <RelativeLayout
            android:id="@+id/fragment_take_photos.inner_container"
            android:layout_below="@+id/fragment_take_photos.tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>
