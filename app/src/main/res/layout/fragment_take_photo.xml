<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/fragment_take_photo_header_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/fragment.take.photo.header.label"
            android:textSize="15sp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:layout_below="@+id/fragment_take_photo_header_label"
            android:layout_above="@+id/fragment_take_photo_linearLayout">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <SurfaceView
                    android:id="@+id/fragment_take_photo.surfaceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/fragment_take_photo_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignParentBottom="true">

        <Button
                android:id="@+id/fragment_take_photo_finish"
                style="@style/green_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="@string/fragment.take.photo.finish.button"/>
        <!-- TODO baslow: change button! -->
        <Button
                android:id="@+id/fragment_take_photo_take_picture"
                style="@style/green_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="@string/fragment.take.photo.get.image.button"/>


    </LinearLayout>

</RelativeLayout>
